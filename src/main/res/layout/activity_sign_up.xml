<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SignUpActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow">

    <ImageView
        android:id="@+id/signup_app_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/saathi"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="25dp"/>

    <EditText
        android:id="@+id/personName"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:background="@drawable/edittext_radius"
        android:hint="Name"
        android:textColorHint="#AEAEAE"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/signUpEmail"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:hint="Email"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:background="@drawable/edittext_radius"
        android:textColorHint="#AEAEAE"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"/>


    <EditText
        android:id="@+id/signUpPassword"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:hint="Password"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:background="@drawable/edittext_radius"
        android:textColorHint="#AEAEAE"
        android:textColor="@color/black"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/alreadyHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account"
        android:layout_gravity="right"
        android:layout_marginRight="60dp"
        android:padding="10dp"/>


    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="SIGN UP"
        android:backgroundTint="#128c7e">

    </Button>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/googleSignIn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Google"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/google_24x24"
            android:drawablePadding="4dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"/>
        <Button
            android:id="@+id/facebookSignIn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/facebook_24x24"
            android:drawablePadding="4dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:backgroundTint="#4267B2"/>


    </LinearLayout>

    <TextView
        android:id="@+id/signUpPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up with phone"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>




</LinearLayout>