<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.VideoFragment">


    <!-- add Camera Button to open the Camera-->
    <Button
        android:id="@+id/camera_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="140dp"
        android:layout_marginEnd="151dp"
        android:text="Camera" />

    <!-- add ImageView to display the captured image-->

    <TextView
        android:id="@+id/videoVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera_button"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginLeft="100dp"
        android:text="IMAGE VERIFICATION"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/click_image"
        android:layout_below="@id/videoVerification"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR image Will Appear Above. Be Patient after clicking the photo"
        android:textSize="16dp"
        android:padding="10dp"
        android:layout_below="@id/click_image"/>
</RelativeLayout>

